<!doctype html>
<html>

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <header>
    <%- include('../partials/header') %>
  </header>
  <h2 style="text-align:center; margin:15px">Edit Event</h2>
  <div class="container" id="changeEventDiv">
    <form>
      <div class="form-group">
        <label for="event-id">Event ID</label>
        <input type="text" class="form-control" id="event_id" value="<%= event.event_id %>" readonly>
      </div>
      <div class="form-group">
        <label for="event-name">Event Name</label>
        <input type="text" class="form-control" id="event_name" placeholder="Event Name" value="<%= event.event_name %>">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="event_description" placeholder="Description" value="<%= event.event_description %>">
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        <input type="text" class="form-control" id="category" placeholder="Category" value="<%= event.category %>">
      </div>
      <div class="form-group">
        <label for="imageSelect">Choose An Existing Image:</label><br>
          <select name="existingImages" id="existing-images" style="min-width:100%;">
            <option value="select-image">Select an option:</option>
            <option value="/images/event-images/file-name1.jpg">Image 1</option>
            <option value="/images/event-images/file-name2.jpg">Image 2</option>
            <option value="/images/event-images/file-name3.jpg">Image 3</option>
          </select>
      </div>
      <h4 style="margin-left:25px">-or-</h4>
      <div class="form-group">
        <label for="image">Upload An Image:</label><br>
        <input type="file" name="chooseFile" id="chooseFile">
      </div>
      <div class="form-group">
        <label for="image_url">Image URL</label>
        <input type="text" class="form-control" id="image_url" placeholder="Image URL" value="<%= event.image_url %>">
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <input type="text" class="form-control" id="date" placeholder="Date (GMT Universal Format)" value="<%= event.date %>">
      </div>
      <div class="form-group">
        <label for="time">Time</label>
        <input type="text" class="form-control" id="time" placeholder="Time (00:00:00 format)" value="<%= event.time %>">
      </div>
      <div class="form-group">
        <label for="day">Day</label>
        <input type="text" class="form-control" id="day" placeholder="Day" value="<%= event.day %>">
      </div>
      <div class="form-group">
        <label for="base_price">Base Price</label>
        <input type="text" class="form-control" id="base-price" placeholder="Base Price" value="<%= event.base_price %>">
      </div>
      <button onclick="changeEvent()" id="change_event" type="button">Update</button>
      <button type="reset" value="Reset">Reset</button>
    </form>
  </div>
  <h5 style="color:red" id="error-box"></h5>
	<h5 style="color:green" id="success-box"></h5>
  <hr style="margin-bottom: 15px; margin-top: 15px">
  <footer class="text-center">
    <script src="/js/admin.js"></script>
    <%- include('../partials/footer') %>
  </footer>
  <%- include('../partials/scripts') %>
</body>

</html>
