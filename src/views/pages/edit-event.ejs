<!doctype html>
<html>

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <header>
    <%- include('../partials/header') %>
  </header>
  <h2 style="text-align:center; margin:15px">Edit Event</h2>
  <div class="container" id="changeEventDiv">
    <form>
      <div class="form-group">
        <label for="event-id">Event ID</label>
        <input type="text" class="form-control" id="change_event_id" value="<%= event.event_id %>" readonly>
      </div>
      <div class="form-group">
        <label for="event-name">Event Name</label>
        <input type="text" class="form-control" id="change_eventname" placeholder="Event Name" value="<%= event.event_name %>">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="change_description" placeholder="Description" value="<%= event.event_description %>">
      </div>
      <div class="form-group">
        <label for="imageSelect">Choose An Existing Image:</label><br>
          <select name="existingImages" id="existing-images" style="min-width:100%;">
            <option value="select-image">Select an option:</option>
            <option value="/images/event-images/file-name1.jpg">Image 1</option>
            <option value="/images/event-images/file-name2.jpg">Image 2</option>
            <option value="/images/event-images/file-name3.jpg">Image 3</option>
          </select>
      </div>
      <h4 style="margin-left:25px">-or-</h4>
      <div class="form-group">
        <label for="image">Upload An Image:</label><br>
        <input type="file" name="chooseFile" id="chooseFile">
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <input type="text" class="form-control" id="change_date" placeholder="Date (GMT Universal Format)" value="<%= event.date %>">
      </div>
      <div class="form-group">
        <label for="time">Time</label>
        <input type="text" class="form-control" id="change_time" placeholder="Time (00:00:00 format)" value="<%= event.time %>">
      </div>
      <div class="form-group">
        <label for="day">Day</label>
        <input type="text" class="form-control" id="day" placeholder="Day" value="<%= event.day %>">
      </div>
      <div class="form-group">
        <label for="base_price">Base Price</label>
        <input type="text" class="form-control" id="base-price" placeholder="Base Price" value="<%= event.base_price %>">
      </div>
      <div class="form-group">
        <label for="discount-eligable">Discount Eligible</label>
        <input type="text" class="form-control" id="discount-eligable" placeholder="Discount Eligable" value="<%= event.discount_eligable %>">
      </div>
      <button onclick="changeEvent()" id="change_event">Update</button>
      <button type="reset" value="Reset">Reset</button>
    </form>
  </div>
  <hr style="margin-bottom: 15px; margin-top: 15px">
  <footer class="text-center">
    <%- include('../partials/footer') %>
  </footer>
  <%- include('../partials/scripts') %>
</body>

</html>
