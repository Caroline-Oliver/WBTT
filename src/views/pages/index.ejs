<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <header>
    <%- include('../partials/header') %>
  </header>
  <div class="container mt-2">
    <div class="row">
      <div class="col-12">
        <div class="jumbotron">
          <h1 class="text-center" style="color: #14213D">Same Tickets. No Fees</h1>
          <!--<img src="/images/1200X400.gif" alt="" class="img-fluid">-->
        </div>
      </div>
    </div>
  </div>

  <hr style="margin-bottom: 15px; margin-top: 15px">
  <div class="container">
    <h2 style="text-align: center">Upcoming Events</h2>
    <% let idx=0; %>
    <% const formatter=new Intl.NumberFormat('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
    <% if (events==null) events=[]; %>

    <% events.forEach(function(event) { %>
    <% var arr = event.time.split(':'); %>
    <% var hours = arr[0] % 12; %>
    <% var minutes = arr[1]; %>
    <% var amOrPm = arr[0] > 12 ? 'PM' : 'AM'; %>
    <% if (idx % 2 == 0) { %>
    <div class="row" style="margin-top: 25px">
      <div class="col-lg-9 col-12" style="margin-top: 10px">
        <h3 style="text-align: center">
          <a href="/event/<%= event.event_id %>"><%= event.event_name %></a>
        </h3>
        <p>
          <%= event.event_description %>
        </p>
        <div class="table-responsive" style="margin-left: auto;margin-right: 0;" >
          <table class="table table-striped table-sm w-auto table-borderless">
            <thead>
              <tr>
                <th>
                  <h6 style="font-weight:bold">Base Price</h6>
                </th>
                <th>
                  <h6 style="font-weight:bold">Date</h6>
                </th>
                <th>
                  <h6 style="font-weight:bold">Time</h6>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <p>$<%= formatter.format(parseFloat(event.base_price)) %>
                  </p>
                </td>
                <td>
                  <p>
                    <%= event.date %>
                  </p>
                </td>
                <td>
                  <p>
                    <%= hours + ':' + minutes + ' ' + amOrPm %>
                  </p>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-lg-3 col-12" style="margin-top: 10px">
        <img class="img-fluid" alt="<%= event.event_name %>" src="<%= event.image_url %>" style="max-height: 500px">
      </div>
    </div>
    <% } else { %>
    <div class="row flex-row" style="margin-top: 25px">
      <div class="col-lg-3 col-12" style="margin-top: 10px">
        <img class="img-fluid" alt="<%= event.event_name %>" src="<%= event.image_url %>" style="max-height: 500px">
      </div>
      <div class="col-lg-9 col-12" style="margin-top: 10px">
        <h3 style="text-align: center">
          <a href="/event/<%= event.event_id %>"><%= event.event_name %></a>
        </h3>
        <p>
          <%= event.event_description %>
        </p>
        <div class="table-responsive">
          <table class="table table-striped table-sm w-auto table-borderless">
            <thead>
              <tr>
                <th>
                  <h6 style="font-weight:bold">Base Price</h6>
                </th>
                <th>
                  <h6 style="font-weight:bold">Date</h6>
                </th>
                <th>
                  <h6 style="font-weight:bold">Time</h6>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <p>$<%= formatter.format(parseFloat(event.base_price)) %>
                  </p>
                </td>
                <td>
                  <p>
                    <%= event.date %>
                  </p>
                </td>
                <td>
                  <p>
                    <%= hours + ':' + minutes + ' ' + amOrPm %>
                  </p>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% } %>
    <% idx += 1 %>
    <% }); %>
  </div>
  <hr>
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-6 col-sm-6 mb-md-0 mb-2">
        <h4>Contact Us</h4>
        <address>
          <strong>WBTT, Inc.</strong><br>
          1 UTSA Circle<br>
          San Antonio, TX 78249<br>
          <abbr title="Phone">P:</abbr> (123) 456-7890
        </address>
      </div>


    </div>
  </div>
  <hr>
  <footer class="text-center">
    <%- include('../partials/footer') %>
  </footer>
  <%- include('../partials/scripts') %>
</body>

</html>