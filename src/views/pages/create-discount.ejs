<!doctype html>
<html>

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <header>
    <%- include('../partials/header') %>
  </header>
  <h2 class="admin-page-header">Create Discount Code</h2>
  <div class="container" id="changeUserDiv">
    <form>
      <div class="form-group">
        <label for="user_id">Code</label>
        <input type="text" class="form-control" id="code" placeholder="Code">
      </div>
      <div class="form-group">
        <label for="user_id">Type</label>
        <input type="text" class="form-control" id="type" placeholder="'1' for percent, '2' for actual">
      </div>
      <div class="form-group">
        <label for="user_id">Amount</label>
        <input type="text" class="form-control" id="amount" placeholder="Amount">
      </div>
      <div class="form-group">
        <label for="user_id">Expiration</label>
        <input type="text" class="form-control" id="expiration" placeholder="Expiration">
      </div>
      <button onclick="createDiscount_ad()" id="change_user" type="button">Create</button>
      <button type="reset" value="Reset">Reset</button>
      <h5 style="color:red" id="error-box"></h5>
			<h5 style="color:green" id="success-box"></h5>
    </form>
  </div>
  <hr style="margin-bottom: 15px; margin-top: 15px">
  <footer class="text-center">
    <%- include('../partials/footer') %>
  </footer>
  <script src="/js/admin.js"></script>
  <%- include('../partials/scripts') %>
</body>

</html>
