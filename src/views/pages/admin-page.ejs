                  <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                  <polyline points="2 17 12 22 22 17"></polyline>
                  <polyline points="2 12 12 17 22 12"></polyline>
                </svg>
                Events
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="chartjs-size-monitor"
          style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
          <div class="chartjs-size-monitor-expand"
            style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
          </div>
          <div class="chartjs-size-monitor-shrink"
            style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
          </div>
        </div>
        
        <div class="admin-menu" id="orders-body">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h2>Orders</h2>
          </div>
          <div class="table-responsive">
            <table id="orders-table" class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>User ID</th>
                  <th>Total Cost</th>
                  <th>Order Date</th>
                </tr>
              </thead>
              <tbody>
                <% orders_date.forEach(function(order) { %>
                  <tr>
                    <td>
                      <a href="/admin/order/<%= order.order_id %>">
                      <%= order.order_id %>
                    </a>
                    </td>
                    <td>
                      <%= order.user_id %>
                    </td>
                    <td>
                      $<%= formatter.format(order.total_cost) %>
                    </td>
                    <td>
                      <%= order.order_date %>
                    </td>
                  </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        
        <div class="admin-menu" id="discounts-body">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h2>Discount Codes</h2>
          </div>
          <div id=event-edit>
            <button type="button" class="btn btn-inverse" style="margin-right: 95px;"
              onclick="location.href='/admin/createDiscount'">Create Discount</button>
          </div>
          <div class="table-responsive">
            <table id="discounts-table" class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Discount Code</th>
                  <th>Code Number</th>
                  <th>Type</th>
                  <th>Value</th>
                  <th>Expiration</th>
                </tr>
              </thead>
              <tbody>
                <% discount_codes.forEach( (code) => { %>
                  <tr>
                    <td><a href="/admin/editDiscount/<%= code.discount_id %>"><%= code.code %></td></a>
                    <td><%= code.discount_id %></td>
                    <td><%= code.type == 1 ? "Percentage" : "Actual" %></td>
                    <td><%= code.amount %></td>
                    <td><%= code.expiration %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="admin-menu" id="events-body">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h2>Events</h2>
          </div>
          <div id=event-edit>
            <button type="button" class="btn btn-inverse" style="margin-right: 95px;"
              onclick="location.href='/admin/createEvent'">Create Event</button>
          </div>
          <div class="table-responsive">
            <table id="events-table" class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Event</th>
                  <th style="min-width:70px">Event ID</th>
                  <th>Description</th>
                  <th>Venue</th>
                  <th>Date</th>
                  <th>Day</th>
                  <th>Time</th>
                </tr>
              </thead>
              <tbody>
                <% events.forEach(function(event) { %>
                  <tr>
                    <td>
                      <a href="/admin/editEvent/<%= event.event_id %>">
                        <%= event.event_name %>
                      </a>
                    </td>
                    <td>
                      <%= event.event_id %>
                    </td>
                    <td>
                      <%= event.event_description %>
                    </td>
                    <td>
                      <%= event.venue %>
                    </td>
                    <td>
                      <%= event.date %></td>
                <td><%= event.day %></td>
                <td><%= event.time %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        </div>

        <div class="admin-menu" id="users-body">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h2>Users</h2>
        </div>
        <div id=event-edit>
        <button type="button" class="btn btn-inverse" style="margin-right: 95px;" onclick="location.href='/admin/createUser'">Create User</button>
          </div>
          <div class="table-responsive">
            <table id="users-table" class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>User ID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>User Type</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function(user) { %>
                  <tr>
                    <td><a href="/admin/editUser/<%= user.user_id%>">
                        <%= user.user_name %>
                      </a></td>
                    <td>
                      <%= user.user_id %>
                    </td>
                    <td>
                      <%= user.first_name %>
                    </td>
                    <td>
                      <%= user.last_name %>
                    </td>
                    <td>
                      <%= user.email %>
                    </td>
                    <% if (user.type=='0' ) { %>
                      <td>
                        <%= "Admin" %>
                      </td>
                      <% } else { %>
                        <td>
                          <%= "User" %>
                        </td>
                        <% } %>
                  </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
