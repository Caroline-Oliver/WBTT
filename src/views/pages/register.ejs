<!doctype html>
<html>

<head>
	<%- include('../partials/head') %>
</head>

<body>
	<header>
		<%- include('../partials/header') %>
	</header>
	<div class="container">
		<form>
			<div class="form-row">
				<div class="form-group col-md-4 offset-md-4">
					<label for="inputUsername">Username</label>
					<input type="text" class="form-control" id="username" placeholder="Username">
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-4 offset-md-4">
					<label for="inputPassword">Password</label>
					<input type="password" class="form-control" id="password" placeholder="Password">
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-4 offset-md-4">
					<label for="inputEmailAddress">Email</label>
					<input type="email" class="form-control" id="email" placeholder="Email">
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-4 offset-md-4">
					<label for="inputFirst">First Name</label>
					<input type="text" class="form-control" id="first_name" placeholder="First">
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-4 offset-md-4">
					<label for="inputLast">Last Name</label>
					<input type="text" class="form-control" id="last_name" placeholder="Last">
				</div>
			</div>
			<button onclick="register()" type="button" class="btn btn-primary">Register</button>
			<h5 style="color:red" id="error-box"></h5>
			<h5 style="color:green" id="success-box"></h5>
		</form>
	</div>
	<script src="/js/register.js"></script>
	<%- include('../partials/scripts') %>
</body>

</html>
